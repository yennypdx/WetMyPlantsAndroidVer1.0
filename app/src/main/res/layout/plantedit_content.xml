<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plantEditTableLayout"
    android:stretchColumns="1,2,3"
    android:padding="5dp"
    tools:showIn="@layout/activity_plantedit">

    <!-- tableRowPlant0 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRowPlant0"
        android:paddingTop="25dp">
        <TextView
            android:id="@+id/plantEditTopBarLabel"
            android:text="@string/update_plant_info"
            android:layout_span="3"
            android:gravity="center"
            android:textSize="25sp"
            style="@style/AccountTextView"/>
    </TableRow>

    <!-- tableRowPlant1 -->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRowPlantEdit1"
        android:paddingTop="25dp">
        <TextView
            android:id="@+id/plantNameLabel"
            android:text="@string/plant_name"
            style="@style/AccountTextView"/>
        <EditText
            android:id="@+id/plantEditNameInput"
            android:textColor="@android:color/holo_blue_dark"
            android:hint="@string/new_plant_name"
            style="@style/AccountTextViewBorder"/>
    </TableRow>

    <!-- tableRowPlant2-->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRowPlantEdit2"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/plantEditSpeciesLabel"
            android:text="@string/plant_species"
            style="@style/AccountTextView"/>
        <EditText
            android:id="@+id/plantEditSpeciesInput"
            android:textColor="@android:color/holo_blue_dark"
            android:hint="@string/new_species"
            style="@style/AccountTextViewBorder"/>
    </TableRow>

    <!-- tableRowPlant3-->
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tableRowPlantEdit3"
        android:paddingTop="20dp">
        <Button
            android:id="@+id/update_plant_info_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/update_plant_icon"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_column="1"
            android:layout_span="1"
            android:background="@drawable/button_round"/>
    </TableRow>

</TableLayout>

