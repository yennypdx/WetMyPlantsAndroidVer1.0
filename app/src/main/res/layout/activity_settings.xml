<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/wmp_xxdpi"
    tools:context=".activities.SettingsActivity">

    <LinearLayout
        android:id="@+id/settings_notification_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/std_16"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginRight="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16">
        <TextView
            android:id="@+id/notification_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/notification_prompt"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <CheckBox android:id="@+id/email_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_notifications" />
            <CheckBox android:id="@+id/text_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_16"
                android:text="@string/text_notifications" />
            <CheckBox android:id="@+id/none_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_16"
                android:text="@string/noneNotif" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_color_theme_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="@dimen/std_16"
        android:layout_marginStart="@dimen/std_16"
        android:layout_marginRight="@dimen/std_16"
        android:layout_marginEnd="@dimen/std_16">
        <TextView
            android:id="@+id/color_theme"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/color_theme_selection"
            android:textSize="16sp"
            android:textColor="@color/black"/>
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/appTheme_spinner"
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:entries="@array/color_theme_options"
            android:layout_gravity="start"
            style="@android:style/Widget.Holo.Light.Spinner"/>
    </LinearLayout>
</LinearLayout>
