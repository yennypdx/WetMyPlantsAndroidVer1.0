<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wmp_xxdpi"
    tools:context=".activities.PlantEditActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/plantEditTableLayout"
        android:stretchColumns="1"
        android:padding="5dp">
        <!-- tableRowPlant0 -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tableRowPlant0"
            android:paddingTop="25dp">
            <TextView
                android:id="@+id/plantEditTopBarLabel"
                android:text="@string/update_plant_info"
                android:layout_span="3"
                android:gravity="center"
                android:textSize="25sp"
                style="@style/myStyleTextView"/>
        </TableRow>

        <!-- tableRowPlant1 -->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tableRowPlantEdit1"
            android:paddingTop="25dp">
            <TextView
                android:id="@+id/plantNameLabel"
                android:text="@string/plant_name"
                style="@style/myStyleTextView"/>
            <EditText
                android:id="@+id/plantEditNameInput"
                android:textColor="@color/darkGrey"
                android:inputType="text"
                style="@style/myStyleTextViewBorder"/>
            <ImageView
                android:id="@+id/editPlantIdBtn"
                android:src="@drawable/black_edit_icon"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"/>
        </TableRow>

        <!-- tableRowPlant2-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tableRowPlantEdit2"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/plantEditIdLabel"
                android:text="@string/sensor_id"
                style="@style/myStyleTextView"/>
            <EditText
                android:id="@+id/plantEditIdInput"
                android:textColor="@color/darkGrey"
                android:inputType="text"
                style="@style/myStyleTextViewBorder"/>
            <ImageView
                android:id="@+id/editSensorIdBtn"
                android:src="@drawable/black_edit_icon"
                android:layout_gravity="center"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"/>
        </TableRow>

        <!-- tableRowPlant3-->
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tableRowPlantEdit3"
            android:paddingTop="40dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/update_plant_info_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/update_plant_icon"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_span="2"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/button_round_green"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"/>
        </TableRow>
    </TableLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plantEdit_homeFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        app:fabSize="auto"
        android:layout_margin="16dp"
        android:src="@drawable/homie"/>

</android.support.design.widget.CoordinatorLayout >


