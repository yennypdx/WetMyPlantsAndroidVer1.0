<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wmp.android.wetmyplants">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wmp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@drawable/button_round" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NewPasswordActivity"
            android:label="@string/title_activity_newpass"></activity>
        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/title_activity_dashboard"></activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_registration"></activity>
        <activity
            android:name=".activities.AccountActivity"
            android:label="@string/title_activity_account"></activity>
        <activity
            android:name=".activities.AccountEditActivity"
            android:label="@string/title_activity_edit_account"></activity>
        <activity
            android:name=".activities.PlantsActivity"
            android:label="@string/title_activity_plant"></activity>
        <activity
            android:name=".activities.SensorsActivity"
            android:label="@string/title_activity_sensor"></activity>

    </application>

</manifest>