<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.wetmyplants">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/wmp_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- LAUNCHER Activity -->
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- NON-LAUNCHER Activities -->
        <activity
            android:name=".activities.NewPasswordActivity"
            android:label="@string/title_activity_newpass" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_registration" />
        <activity
            android:name=".activities.DashboardActivity"
            android:label="@string/title_activity_dashboard" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:label="@string/title_pinconfirm" />
        <activity
            android:name=".activities.AccountActivity"
            android:label="@string/title_activity_account" />
        <activity
            android:name=".activities.AccountEditActivity"
            android:label="@string/title_activity_edit_account" />
        <activity
            android:name=".activities.UpdatePasswordActivity"
            android:label="@string/title_update_pass" />
        <activity
            android:name=".activities.PlantsActivity"
            android:label="@string/title_activity_plant" />
        <activity
            android:name=".activities.PlantDetailActivity"
            android:label="@string/title_activity_detail_plant" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.PlantEditActivity"
            android:label="@string/title_activity_edit_plant" />
        <activity
            android:name=".activities.NotificationActivity"
            android:label="@string/title_notif_activity" />
        <activity
            android:name=".activities.HubActivity"
            android:label="@string/title_activity_hub" />
    </application>

</manifest>